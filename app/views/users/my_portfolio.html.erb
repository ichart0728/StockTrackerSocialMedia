<h1>My Portfolio</h1>
<div class="search-area">
  <h3>Search Stock</h3>
  <%= form_with url: search_stock_path, method: :get do |form| %>
    <div class="form-group row">
      <div class="col-sm-9 no-right-padding">
        <%= form.text_field :stock, placeholder: "Stock ticker symbol", autofocus: true, class: "form-controller form-controller-lg w-100 h-100" %>
      </div>
      <div class="col-sm-3 no-left-padding">
        <%= button_tag type: :submit, class: "btn btn-success" do %>
          <%= fa_icon 'search' %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
<div id="results">
</div>
